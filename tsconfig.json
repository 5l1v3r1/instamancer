    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "noImplicitAny": false,
        "inlineSourceMap": true,
        "lib": ["dom", "es2018", "esnext.asynciterable"],
        "resolveJsonModule": true,
        "declaration": true,
